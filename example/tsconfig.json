    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "paths": {
      "@aulasoftwarelibre/nestjs-eventstore": ["./src/nestjs-eventstore/"],
      "*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
